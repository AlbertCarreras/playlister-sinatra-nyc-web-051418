<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title><%= @genre.name %></title>
  </head>
  <body>
    <h1><%= @genre.name %></h1>
    <h2>Songs</h2>
    <ul>
      <% @songs.each do |song| %>
        <a href="/songs/<%= song.slug %>"><li><%= song.name %></li></a>
      <% end %>
    </ul>
    <h2>Artists</h2>
    <ul>
      <% @artists.each do |artist| %>
        <a href="/artists/<%= artist.slug %>"><li><%= artist.name %></li></a>
      <% end %>
    </ul>
  </body>
</html>
